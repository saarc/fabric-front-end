  <script>
    $(function () {
      // Query All Cars
      $('#btnQueryAllCars').click(async () => {
        const result = await fetch('/api/cars');
        const json = await result.json();
        let table = '<table class="table-car"><thead><tr><th>Key</th><th>Make</th><th>Model</th><th>Colour</th><th>Owner</th></tr></thead><tbody>';
        for(let i = 0; i < json.length; i++) {
          table += '<tr>';
          table += `<td>${json[i].Key}</td>`;
          table += `<td>${json[i].Record.make}</td>`;
          table += `<td>${json[i].Record.model}</td>`;
          table += `<td><font color="${json[i].Record.colour}">${json[i].Record.colour}</td>`;
          table += `<td>${json[i].Record.owner}</td>`;
          table += '</tr>';
        }
        table += '</tbody></table>'
        $('#resultQueryAllCars').html(table);
      });
      
      // Highlight row
      $('.table-car tbody tr').hover(() => {
        $('.table-car tbody tr').removeClass('active-row');
        $(this).addClass('active-row');
      });

      // Query Car
      $('#btnQueryCar').click(async () => {
        const carNo = $('#txtCarNoQueryCar').val();

        if(!carNo) {
          $('#resultQueryCar').html(`<font color="red">Please enter your car number.</font>`);
          return;
        }
        
        const result = await fetch(`/api/cars/${carNo}`);

        if(!result.ok) {
          $('#resultQueryCar').html(`<font color="red">Unable to query car with <b>${carNo}</b>.</font>`);
          return;
        }

        const json = await result.json();
        
        let table = '<table class="table-car"><thead><tr><th>Make</th><th>Model</th><th>Colour</th><th>Owner</th></tr></thead><tbody>';
        table += '<tr>';
        table += `<td>${json.make}</td>`;
        table += `<td>${json.model}</td>`;
        table += `<td><font color="${json.colour}">${json.colour}</font></td>`;
        table += `<td>${json.owner}</td>`;
        table += '</tr>';
        table += '</tbody></table>'
        $('#resultQueryCar').html(table);
        // $('#resultQueryCar').html(`Unable to query car with ${carNo}`);
      });

      // Create Car
      $('#btnCreateCar').click(async () => {
        const body = {
          carNo: $('#txtCarNoCreateCar').val(),
          make: $('#txtMakeCreateCar').val(),
          model: $('#txtModelCreateCar').val(),
          colour: $('#txtColourCreateCar').val(),
          owner: $('#txtOwnerCreateCar').val()
        }
        const result = await fetch('/api/cars', {
          method: 'POST',
          body: JSON.stringify(body),
          headers: { 'Content-Type': 'application/json' }
        });
        const json = await result.json();
        $('#resultCreateCar').html(json.msg);
      });

      // Change Car Owner
      $('#btnChangeCarOwner').click(async () => {
        const carNo = $('#txtCarNoChangeCarOwner').val();
        const result = await fetch(`/api/cars/${carNo}`, {
          method: 'PUT',
          body: JSON.stringify({ owner: $('#txtOwnerChangeCarOwner').val() }),
          headers: { 'Content-Type': 'application/json' }
        });
        const json = await result.json();
        $('#resultChangeCarOwner').html(json.msg);
      });
    });
  </script>
